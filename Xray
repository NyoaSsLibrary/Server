--[[

Xray Nigga I swear don't read ts]]

local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")
local RunService = game:GetService("RunService")

local obj = workspace:WaitForChild("Plots")

function XrayOn(currentObj)
    if currentObj:FindFirstChild("AnimationController") then 
        return 
    end
    for _, v in pairs(currentObj:GetChildren()) do
        if (v:IsA("BasePart")) and not v.Parent:FindFirstChild("Humanoid") then
            v.LocalTransparencyModifier = 0.75
        end
        XrayOn(v)
    end
end

function XrayOff(currentObj)
    if currentObj:FindFirstChild("AnimationController") then 
        return 
    end
    for _, v in pairs(currentObj:GetChildren()) do
        if (v:IsA("BasePart")) and not v.Parent:FindFirstChild("Humanoid") then
            v.LocalTransparencyModifier = 0
        end
        XrayOff(v)
    end
end

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "XRayGUI"
ScreenGui.Parent = CoreGui
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame")
Frame.Name = "Frame"
Frame.Parent = ScreenGui
Frame.AnchorPoint = Vector2.new(0.5, 0)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BorderSizePixel = 0
Frame.Position = UDim2.new(0.5, 0, 0, 10)
Frame.Size = UDim2.new(0, 100, 0, 25)
Frame.ClipsDescendants = true
Frame.Active = true

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = Frame

local Activation = Instance.new("TextButton")
Activation.Name = "Activation"
Activation.Parent = Frame
Activation.BackgroundColor3 = Color3.fromRGB(255, 51, 51)
Activation.BorderSizePixel = 0
Activation.Position = UDim2.new(0, 2, 0.5, -10)
Activation.Size = UDim2.new(0, 20, 0, 20)
Activation.Font = Enum.Font.Gotham
Activation.Text = ""
Activation.TextSize = 14

local ButtonCorner = Instance.new("UICorner")
ButtonCorner.CornerRadius = UDim.new(0, 10)
ButtonCorner.Parent = Activation

local Title = Instance.new("TextLabel")
Title.Parent = Frame
Title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0.26, 0, 0, 0)
Title.Size = UDim2.new(0.74, 0, 1, 0)
Title.Font = Enum.Font.Gotham
Title.Text = "X-Ray Plots"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 14
Title.TextXAlignment = Enum.TextXAlignment.Left

local toggle = false
local updateConnection = nil

Activation.MouseButton1Click:Connect(function()
    toggle = not toggle
    if toggle then
        Activation.BackgroundColor3 = Color3.fromRGB(52, 255, 52)
        XrayOn(obj)
        
        if updateConnection then updateConnection:Disconnect() end
        local lastTime = tick()
        updateConnection = RunService.Heartbeat:Connect(function()
            local now = tick()
            if now - lastTime >= 1 then
                XrayOn(obj)
                lastTime = now
            end
        end)
    else
        Activation.BackgroundColor3 = Color3.fromRGB(255, 51, 51)
        XrayOff(obj)
        if updateConnection then
            updateConnection:Disconnect()
            updateConnection = nil
        end
    end
end)

local dragging = false
local dragInput = nil
local dragStart = nil
local startPos = nil

local function updateInput(input)
    local delta = input.Position - dragStart
    Frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

Frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = Frame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

Frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        updateInput(input)
    end
end)
